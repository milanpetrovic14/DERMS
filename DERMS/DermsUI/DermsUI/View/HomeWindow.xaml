                    Effect="{StaticResource CardShadow}" Padding="8"
                    BorderThickness="1" BorderBrush="#EBEBEB">
                                <ContentPresenter  Content="{Binding Content}"/>
                            </Border>
                        </Grid>
                    </Border>


